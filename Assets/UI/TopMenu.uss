.label {
    -unity-font-style: bold;
}

.button {
    width: 100px;
    margin-bottom: 1px;
    margin-left: 2px;
    margin-right: 2px;
    margin-top: 2px;
    background-color: rgb(0, 255, 23);
}

.button:hover {
    background-color: rgb(255, 0, 0);
}

.button:active {
    border-left-color: rgb(255, 231, 0);
    border-right-color: rgb(255, 231, 0);
    border-top-color: rgb(255, 231, 0);
    border-bottom-color: rgb(255, 231, 0);
    background-color: rgb(255, 252, 0);
}
